<!-- search bar -->
<div class="container search-bar mt-5">
  <div class="row d-flex justify-content-around">
    <div class="col-md-4 col-12">
      <div class="search-bar-inner">
        <form action="/restaurants/search">
          <div class="input-group">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
            <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
              value="{{keyword}}" aria-describedby="search-button">
          </div>
        </form>
      </div>
    </div>
    <div class="col-md-4 col-12">
      <form action="/restaurant/sort">
        <div class="form-group">
          <select id="inputSort" class="form-control">
            <option selected>排序...</option>
            <option>字母</option>
            <option>類別</option>
            <option>地區</option>
            <option>評分</option>
          </select>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <!-- restaurant search fail notice -->
    <div class="col-md-12 col-12 text-center">
      <h4 class="notice" style="color:#CDCDCD">{{notice}}</h4>
    </div>
    <!-- restaurant list -->
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <div class="d-flex justify-content-between pt-2">
                <span class="badge badge-pill badge-danger font-weight-normal mt-1">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>

                <div class="buttons">
                  <a class="btn btn-outline-info btn-sm" id="edit-btn" href="/restaurants/{{ this._id }}/edit"
                    role="button">
                    <i class="far fa-edit fa-fw"></i>
                  </a>
                  <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
                    <button class="btn btn-outline-danger btn-sm" id="delete-btn" type="submit">
                      <i class="far fa-trash-alt fa-fw"></i></button>
                  </form>
                </div>
              </div>
        </a>
      </div>
    </div>
    </a>
    {{/each}}

  </div>
</div>
</div>
</div>